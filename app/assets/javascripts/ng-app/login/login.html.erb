<form name="loginForm" ng-controller="LoginController" ng-submit="login(credentials)" class="form-signin" role="form">
  <h2 class="form-signin-heading">Please Login</h2>
  <label for="email" class="sr-only">Email address</label>
  <input type="email" id="email" ng-model="credentials.email" class="form-control" placeholder="Email address" required autofocus>
  <label for="password" class="sr-only">Password</label>
  <input type="password" id="password" ng-model="credentials.password" class="form-control" placeholder="Password" required>
  <button class="btn btn-lg btn-primary btn-block" type="submit">Login</button>
</form>
